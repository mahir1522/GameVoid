@model PROG3050_Team_Project.Models.Address

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}
<link rel="stylesheet" href="~/css/profile.css">
<div class="brand-logo">
    <div class="game">GAME</div>
    <div class="void">VOID</div>
</div>
<div class="text-center" style="display: flex; flex-direction: column; align-items: center; justify-content: center;">

<h1>Address Information</h1>
  <div class="profile-box">
<form asp-action="AddOrEditAddress" method="post" class="mt-4">
    <input type="hidden" asp-for="AddressID" />
    <input type="hidden" asp-for="MemberID" />

    <div class="mb-3">
        <label asp-for="Country" class="form-label"></label>
        <input asp-for="Country" class="form-control" required />
    </div>
    <div class="mb-3">
        <label asp-for="FullName" class="form-label"></label>
        <input asp-for="FullName" class="form-control" required />
    </div>
    <div class="mb-3">
        <label asp-for="PhoneNumber" class="form-label"></label>
        <input asp-for="PhoneNumber" class="form-control" required />
    </div>
    <div class="mb-3">
        <label asp-for="StreetAddress" class="form-label"></label>
        <input asp-for="StreetAddress" class="form-control" required />
    </div>
    <div class="mb-3">
        <label asp-for="AptSuite" class="form-label"></label>
        <input asp-for="AptSuite" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="City" class="form-label"></label>
        <input asp-for="City" class="form-control" required />
    </div>
    <div class="mb-3">
        <label asp-for="Province" class="form-label"></label>
        <input asp-for="Province" class="form-control" required />
    </div>
    <div class="mb-3">
        <label asp-for="PostalCode" class="form-label"></label>
        <input asp-for="PostalCode" class="form-control" required />
    </div>
    <div class="mb-3">
        <label asp-for="DeliveryInstructions" class="form-label"></label>
        <textarea asp-for="DeliveryInstructions" class="form-control"></textarea>
    </div>
    <div class="mb-3 form-check"> 
        <div style="display: flex; justify-content: center;">
        <input type="checkbox" asp-for="IsShippingSameAsMailing" class="form-check-input" />
        </div>
        <label asp-for="IsShippingSameAsMailing" class="form-check-label">Use as shipping address</label>
    </div>

    <button type="submit" class="btn btn-primary">Save Address</button>
    <a asp-action="Profile" asp-route-memberId="@Model.MemberID" class="btn btn-secondary ms-2">Back to Profile</a>
</form>
  </div>
</div>
