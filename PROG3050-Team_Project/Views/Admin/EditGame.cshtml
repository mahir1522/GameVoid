@model PROG3050_Team_Project.Models.Game

@{
    ViewData["Title"] = "Edit Game";
}
<link rel="stylesheet" href="~/css/adminAddEdit.css">

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}
<a asp-action="Index" asp-controller="Admin" class="btn btn-secondary">Back to Game List</a>

<link rel="stylesheet" href="~/css/navbar.css">




<div class="sidebar">
    <div class="mb-5">
        <a href="@Url.Action("Index", "Admin")">
            <div class="brand-logo">
                <div class="game">GAME</div>
                <div class="void">VOID</div>
            </div>
        </a>
    </div>
    <br /><br />
    <ul class="nav flex-column">
        <li class="nav-item mb-3">
            <a class="nav-link text-light" href="@Url.Action("Index", "Admin")">Dashboard</a>
        </li>
        <li class="nav-item mb-3">
            <a class="nav-link text-light" href="@Url.Action("Event", "Admin")">Events</a>
        </li>
        <li class="nav-item mb-3">
            <a class="nav-link text-light" href="@Url.Action("Order", "Admin")">Orders</a>
        </li>
        <li class="nav-item mb-3">
            <a class="nav-link text-light" href="@Url.Action("Reports", "Admin")">Reports</a>
        </li>
        <li class="nav-item mb-3">
            <a class="nav-link text-light">Game Reviews</a>
        </li>
         <li class="nav-item mb-3">
            <a class="nav-link text-light" asp-controller="LogIn" asp-action="Index">LogOut</a>
        </li>
    </ul>
</div>
<div class="text-center" style="display: flex; flex-direction: column; align-items: center; justify-content: center;">
    <h1 class="display-4">Edit Game</h1>

    <div class="add-box">

        <form asp-controller="Admin" asp-action="EditGame" method="post">
    <input type="hidden" asp-for="GameID" />

   <div class="form-group">
            <label asp-for="Title" class="form-label">Title</label>
            <input asp-for="Title" class="form-control" placeholder="Enter Title" required />
        </div>
        <br />

         <div class="form-group">
            <label asp-for="Description" class="form-label">Description</label>
            <textarea asp-for="Description" class="form-control" rows="4" placeholder="Enter Description" required></textarea>
        </div>
        <br />

            <div class="form-group">
                <label asp-for="Platform" class="form-label">Platform</label>
                <select asp-for="Platform" class="form-control" required>
                    <option value="" disabled selected>Select a Platform</option>
                    <option value="PC">PC</option>
                    <option value="PlayStation">PlayStation</option>
                    <option value="Xbox">Xbox</option>
                    <option value="Nintendo Switch">Nintendo Switch</option>
                    <option value="Mobile">Mobile</option>
                </select>
            </div>
            <br />

            <div class="form-group">
                <label asp-for="Category" class="form-label">Category</label>
                <select asp-for="Category" class="form-control" required>
                    <option value="" disabled selected>Select a Category</option>
                    <option value="RPG">RPG</option>
                    <option value="Action-Adventure">Action-Adventure</option>
                    <option value="Shooter">Shooter</option>
                    <option value="Sandbox">Sandbox</option>
                    <option value="Party">Party</option>
                    <option value="Adventure">Adventure</option>
                    <option value="Battle Royale">Battle Royale</option>
                </select>
            </div>
        <br />

        <div class="form-group">
            <label asp-for="ReleaseDate" class="form-label">Release Date</label>
            <input asp-for="ReleaseDate" class="form-control" placeholder="Enter Release Date" required />
        </div>
        <br />

        <div class="form-group">
            <label asp-for="Price" class="form-label">Price</label>
            <input asp-for="Price" class="form-control" placeholder="Enter Price" required />
        </div>
        <br />

        <div class="form-group">
            <label asp-for="Rating" class="form-label">Rating</label>
            <input asp-for="Rating" class="form-control" placeholder="Enter Rating" required />
        </div>
        <br />
    <br />
    <br />

    <div class="form-group">
        <label asp-for="IsDownloadable" class="form-label">Is Downloadable</label>
        <input asp-for="IsDownloadable" class="text-center" placeholder="Yes/No" />
    </div>
    <br />

    <button type="submit" class="btn btn-primary">Edit Game</button><br />
</form>

    </div>
</div>

