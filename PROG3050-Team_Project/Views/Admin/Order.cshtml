@{
}
@model IEnumerable<PROG3050_Team_Project.Models.Order>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}
<link rel="stylesheet" href="~/css/admin.css">

<a class="nav-link text-light" asp-controller="LogIn" asp-action="Index">LogOut</a>
<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container-fluid">
        <!-- Logo and brand name -->
        <a class="navbar-brand" href="@Url.Action("Index", "Admin")">
            <div class="brand-logo">
                <span class="game">GAME</span>
                <span class="void">VOID</span>
            </div>
        </a>

        <!-- Toggler button for smaller screens -->
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <!-- Navbar links -->
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ms-auto">
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Index", "Admin")">Dashboard</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Event", "Admin")">Events</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Order", "Admin")">Order</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action()">Reports</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action()">Game Reviews</a>
                </li>
            </ul>
        </div>
    </div>
</nav>
<div class="text-center" style="display: flex; flex-direction: column; align-items: center; justify-content: center;">
    <h1 class="display-4">Events</h1>

 @* Checking if model is null or if database is empty *@
        @if (Model == null || !Model.Any())
        {
            <p>No events available.</p>
        }
        else
        {

            <table class="table">
                <thead>
                    <tr>
                        <th>OrderDate</th>
                        <th>Total Amount</th>
                        <th>Games</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var order in Model)
                    {
                        <td>@order.OrderDate</td>
                        <td>@order.TotalAmount</td>
                        <td>
                            <ul>
                                @foreach (var item in order.Games)
                                {
                                    <li>
                                            @item.Title - @item.Price.ToString("C")
                                    </li>
                                }
                            </ul>
                        </td>
                        <td>
                            @if (order.OrderStatus == "Pending")
                            {
                                <p>Pending</p>
                                <form asp-action="ProcessedOrder" asp-controller="Admin" asp-route-orderId="@order.OrderId" method="post">
                                    <button class="btn btn-primary btn-sm" type="submit">Processed</button>
                                </form>
                            }
                            else
                            {
                                <button disabled>Processed</button>
                            }
                        </td>
                    }
                </tbody>
            </table>
        }
</div>

