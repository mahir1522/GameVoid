@model IEnumerable<PROG3050_Team_Project.Models.Game>

@{
    ViewData["Title"] = "Admin Panel";
}

<link rel="stylesheet" href="~/css/admin.css">

<div class="brand-logo">
    <span class="game">GAME</span>
    <span class="void">VOID</span>
</div>

<div class="text-center">
    <h1 class="display-4">Admin Panel</h1>
    <div class="add-game-container">
        <a href="@Url.Action("Add", "Admin")" class="btn btn-primary">Add Game</a>
    </div>
    <form asp-action="Index" asp-controller="Admin" method="post">
        @* Checking if model is null or if database is empty *@
        @if (Model == null || !Model.Any())
        {
            <p>No games available.</p>
        }
        else
        {
            <table class="table">
                <thead>
                    <tr>
                        <th>GameID</th>
                        <th>Title</th>
                        <th>Description</th>
                        <th>Platform</th>
                        <th>Category</th>
                        <th>ReleaseDate</th>
                        <th>Price</th>
                        <th>Rating</th>
                        <th>IsDownloadable</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var game in Model)
                    {
                        <tr>
                            <td>@game.GameID</td>
                            <td>@game.Title</td>
                            <td>@game.Description</td>
                            <td>@game.Platform</td>
                            <td>@game.Category</td>
                            <td>@game.ReleaseDate</td>
                            <td>@game.Price</td>
                            <td>@game.Rating</td>
                            <td>@game.IsDownloadable</td>
                            <td>
                                <a href="@Url.Action("Edit", "Admin", new { id = game.GameID })" class="btn btn-edit">Edit</a><br/><br/>
<button type="submit" name="action" value="Delete" formaction="@Url.Action("Delete", "Admin", new { id = game.GameID })" class="btn btn-delete" onclick="return confirm('Are you sure you want to delete this?')">Delete</button>

                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </form>
</div>
