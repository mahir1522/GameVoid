@model IEnumerable<PROG3050_Team_Project.Models.Game>


@{
    ViewData["Title"] = "Admin Panel";
}

<div class="text-center" style="display: flex; flex-direction: column; align-items: center; justify-content: center;">
    <h1 class="display-4">Admin Panel</h1>

    <form asp-action="Index" asp-controller="Admin" method="post">
        @* Checking if model is null or if database is empty *@
        @if (Model == null || !Model.Any())
        {
            <p>No games available.</p>
        }
        else
        {
            <table class="table">
                <thead>
                    <tr>
                        <th>GameID</th>
                        <th>Title</th>
                        <th>Description</th>
                        <th>Platform</th>
                        <th>Category</th>
                        <th>ReleaseDate</th>
                        <th>Price</th>
                        <th>Rating</th>
                        <th>IsDownloadable</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var game in Model)
                    {
                        <tr>
                            <td>@game.GameID</td>
                            <td>@game.Title</td>
                            <td>@game.Description</td>
                            <td>@game.Platform</td>
                            <td>@game.Category</td>
                            <td>@game.ReleaseDate</td>
                            <td>@game.Price</td>
                            <td>@game.Rating</td>
                            <td>@game.IsDownloadable</td>
                            <td>
                                <button type="submit" name="action" value="Edit" formaction="@Url.Action("Edit", "Admin", new { id = game.GameID })" class="btn btn-warning">Edit</button>
                                <button type="submit" name="action" value="Delete" formaction="@Url.Action("Delete", "Admin", new { id = game.GameID })" class="btn btn-danger">Delete</button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </form>
</div>

