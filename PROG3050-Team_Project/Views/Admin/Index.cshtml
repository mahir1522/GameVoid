@model IEnumerable<PROG3050_Team_Project.Models.Game>

@{
    ViewData["Title"] = "Admin Panel";
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

<link rel="stylesheet" href="~/css/admin.css">



<a class="nav-link text-light" asp-controller="LogIn" asp-action="Index">LogOut</a>

<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container-fluid">
        <!-- Logo and brand name -->
        <a class="navbar-brand" href="@Url.Action("Index", "Admin")">
            <div class="brand-logo">
                <span class="game">GAME</span>
                <span class="void">VOID</span>
            </div>
        </a>

        <!-- Toggler button for smaller screens -->
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <!-- Navbar links -->
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ms-auto">
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Index", "Admin")">Dashboard</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Event", "Admin")">Events</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Order", "Admin")">Order</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action()">Reports</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action()">Game Reviews</a>
                </li>
            </ul>
        </div>
    </div>
</nav>

<div class="text-center">
    <h1 class="display-4">Games</h1>
    <div class="add-game-container">
        <a href="@Url.Action("AddGame", "Admin")" class="btn btn-primary">Add Game</a>
    </div>
    <form asp-action="Index" asp-controller="Admin" method="post">
        @* Checking if model is null or if database is empty *@
        @if (Model == null || !Model.Any())
        {
            <p>No games available.</p>
        }
        else
        {
            <table class="table">
                <thead>
                    <tr>
                        <th>GameID</th>
                        <th>Title</th>
                        <th>Description</th>
                        <th>Platform</th>
                        <th>Category</th>
                        <th>ReleaseDate</th>
                        <th>Price</th>
                        <th>Rating</th>
                        <th>IsDownloadable</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var game in Model)
                    {
                        <tr>
                            <td>@game.GameID</td>
                            <td>@game.Title</td>
                            <td>@game.Description</td>
                            <td>@game.Platform</td>
                            <td>@game.Category</td>
                            <td>@game.ReleaseDate</td>
                            <td>@game.Price</td>
                            <td>@game.Rating</td>
                            <td>@game.IsDownloadable</td>
                            <td>
                                <a href="@Url.Action("EditGame", "Admin", new { id = game.GameID })" class="btn btn-edit">Edit</a><br/><br/>
                                <button type="submit" name="action" value="Delete" formaction="@Url.Action("DeleteGame", "Admin", new { id = game.GameID })" class="btn btn-delete" onclick="return confirm('Are you sure you want to delete this?')">Delete</button>

                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </form>
</div>
