
@{
    ViewData["Title"] = "Admin Panel";
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

<link rel="stylesheet" href="~/css/admin.css">



<a class="nav-link text-light" asp-controller="LogIn" asp-action="Index">LogOut</a>

<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container-fluid">
        <!-- Logo and brand name -->
        <a class="navbar-brand" href="@Url.Action("Index", "Admin")">
            <div class="brand-logo">
                <span class="game">GAME</span>
                <span class="void">VOID</span>
            </div>
        </a>

        <!-- Toggler button for smaller screens -->
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <!-- Navbar links -->
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ms-auto">
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Index", "Admin")">Dashboard</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Event", "Admin")">Events</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Order", "Admin")">Order</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Reports", "Admin")">Reports</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action()">Game Reviews</a>
                </li>
            </ul>
        </div>
    </div>
</nav>
<div class="text-center">
    <h1>Reports</h1>
    <div class="mt-3">
        <button class="btn btn-primary" onclick="downloadReport('DownloadGameListReport')">Download Game List</button>
        <button class="btn btn-primary" onclick="downloadReport('DownloadMemberListReport')">Download Member List</button>
        <button class="btn btn-primary" onclick="downloadReport('DownloadWishListReport')">Download Wish List</button>
        <button class="btn btn-primary" onclick="downloadReport('DownloadSalesReport')">Download Sales Report</button>
    </div>
</div>

<script>

    function downloadReport(action) {
        const url = `/Downloader/${action}`;
        const link = document.createElement('a');
        link.href = url;
        link.style.display = 'none';
        document.body.appendChild(link);
        link.click();
        document.body.removeChild(link);
    }

</script>