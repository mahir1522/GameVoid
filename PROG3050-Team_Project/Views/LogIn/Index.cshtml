@model PROG3050_Team_Project.Models.Member

@{
    ViewData["Title"] = "Log In";
}
<link rel="stylesheet" href="~/css/login.css" />

<div class="text-center" style="display: flex; flex-direction: column; align-items: center; justify-content: center;">

    @if (ViewBag.VerificationMessage != null)
    {
        <div class="alert alert-info">
            @ViewBag.VerificationMessage
        </div>
    }

    @if (ViewBag.AccountConfirmed != null)
    {
        <div class="alert alert-success">
            @ViewBag.AccountConfirmed
        </div>
    }

    @if (ViewBag.ErrorMessage != null)
    {
        <div class="alert alert-danger">
            @ViewBag.ErrorMessage
        </div>
    }

    <br />
    <br />

     <div class="brand-logo">
        <span class="game">GAME </span><span class="void">VOID</span>
     </div>
    <div class="login-box">
            <h1 class="display-4">Sign In</h1><br/><br/>
        <form asp-action="Index" asp-controller="LogIn" method="post">
        <div class="form-group">
            <input asp-for="UserName" class="form-control" style="width: 400px;" placeholder="Username" required />
            @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })
        </div>
        <br />
        <div class="form-group">
            <input asp-for="Password" type="password" class="form-control" style="width: 400px;" placeholder="Password" required />
            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
        </div>
        <br />
        <br />
        <button type="submit" class="btn btn-primary">Sign In</button><br/>

        @* <a href="">Forget Password?</a> *@
    </form>
    
    
    
    <br />
    <br />


    <a asp-action="Index" asp-controller="SignUp" class="btn btn-dark">Create An Account</a>    <br />
    @* <a href="">Not a Member?</a> *@
   </div>
    <script>
        console.log('@ViewBag.ConsoleMessage');
    </script>
</div>
