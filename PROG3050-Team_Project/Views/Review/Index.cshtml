@model PROG3050_Team_Project.Models.GameReviewViewModel
<link rel="stylesheet" href="~/css/admin.css">
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

<style>
    .rating {
        direction: rtl; /* Right-to-left to ensure proper hover effect */
        font-size: 2rem;
        unicode-bidi: bidi-override; /* Ensures stars behave correctly */
    }

        .rating input {
            display: none; /* Hide the radio buttons */
        }

        .rating label {
            color: #ddd; /* Unselected stars */
            cursor: pointer;
        }

            .rating input:checked ~ label,
            .rating label:hover,
            .rating label:hover ~ label {
                color: #f5c518; /* Selected stars */
            }

</style>
<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container-fluid">
        <!-- Logo and brand name -->
        <a class="navbar-brand" asp-controller="User" asp-action="Index" asp-route-memberId="@Model.MemberID">
            <div class="brand-logo">
                <span class="game">GAME</span>
                <span class="void">VOID</span>
            </div>
        </a>

        <!-- Toggler button for smaller screens -->
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <!-- Navbar links -->
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ms-auto">
                <li class="nav-item mb-3">
                    <a class="nav-link text-light" asp-controller="User" asp-action="Profile" asp-route-memberId="@Model.MemberID">Profile</a>
                </li>
                <li class="nav-item mb-3">
                    <a class="nav-link text-light" asp-controller="User" asp-action="GoToFriends" asp-route-memberId="@Model.MemberID" class="btn btn-primary">Friends & Family</a>
