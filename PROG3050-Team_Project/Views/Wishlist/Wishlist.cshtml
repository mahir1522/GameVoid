@{
}
@model PROG3050_Team_Project.Models.WishList

<link rel="stylesheet" href="~/css/profile.css">
<div class="brand-logo">
    <div class="game">GAME</div>
    <div class="void">VOID</div>
</div>

<div class="sidebar">
    <div class="mb-5">
          <a asp-controller="User" asp-action="Index" asp-route-memberId="@Model.MemberID"> 
                    <div class="brand-logo">
                        <div class="game">GAME</div>
                        <div class="void">VOID</div>
                    </div>
                </a>


    </div>
    <br /><br />
    <ul class="nav flex-column">
        <li class="nav-item mb-3">
            <a class="nav-link text-light" asp-controller="User" asp-action="Profile" asp-route-memberId="@Model.member.MemberID">Profile</a>
        </li>
        <li class="nav-item mb-3">
            <a class="nav-link text-light" href="#">Search</a>
        </li>
        <li class="nav-item mb-3">
            <a class="nav-link text-light" href="#">Library</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-light" asp-controller="Wishlist" asp-action="List" asp-route-memberId="@Model.member.MemberID">WishList</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-light" asp-controller="LogIn" asp-action="Index">LogOut</a>
        </li>
    </ul>
</div>
<h2>Wishlist</h2>

@if (Model?.Games != null && Model.Games.Any())
{
    <table>
        <thead>
            <tr>
                <th>Game Name</th>
                <th>Price</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var game in Model.Games)
            {
                <tr>
                    <td>@game.Title</td>
                    <td>@game.Price.ToString("C")</td>
                    <td>
                        <a asp-action="RemoveFromWishlist" asp-route-memberId="@Model.MemberID" asp-route-gameId="@game.GameID">Remove</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Your wishlist is empty.</p>
}
