@{
}
@model PROG3050_Team_Project.Models.Order
<link rel="stylesheet" href="~/css/admin.css">
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}


<a class="nav-link text-light" asp-controller="LogIn" asp-action="Index">LogOut</a>

<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container-fluid">
        <!-- Logo and brand name -->
        <a class="navbar-brand" href="@Url.Action("Index", "User")">
            <div class="brand-logo">
                <span class="game">GAME</span>
                <span class="void">VOID</span>
            </div>
        </a>

        <!-- Toggler button for smaller screens -->
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <!-- Navbar links -->
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ms-auto">
                <li class="nav-item mb-3">
                    <a class="nav-link text-light" asp-controller="User" asp-action="Profile" asp-route-memberId="@Model.MemberID">Profile</a>
                </li>
                <li class="nav-item mb-3">
                    <a class="nav-link text-light" asp-controller="User" asp-action="GoToFriends" asp-route-memberId="@Model.MemberID" class="btn btn-primary">Friends & Family</a>
                </li>
                <li class="nav-item mb-3">
                    <a class="nav-link text-light" asp-controller="Wishlist" asp-action="Event" asp-route-memberId="@Model.MemberID">Events</a>
                </li>
                <li class="nav-item mb-3">
                    <a class="nav-link text-light" asp-controller="Wishlist" asp-action="List" asp-route-memberId="@Model.MemberID">WishList</a>
                </li>
                <li class="nav-item mb-3">
                    <a class="nav-link text-light" asp-controller="Wishlist" asp-action="Cart" asp-route-memberId="@Model.MemberID">Cart</a>
                </li>
                <li class="nav-item mb-3">
                    <a class="nav-link text-light" asp-controller="LogIn" asp-action="Index">LogOut</a>
                </li>
            </ul>

        </div>
    </div>
</nav>


<div class="text-center">
    <h1 class="display-4">Order Details</h1>

    <div>
        <p><strong>Order Date:</strong> @Model.OrderDate.ToShortDateString()</p>
        <p><strong>Member:</strong> @Model.Member.FullName</p>
        <p><strong>Status:</strong> @Model.OrderStatus</p>
        <p><strong>Total Amount:</strong> $@Model.TotalAmount.ToString("0.00")</p>
    </div>

    <h4>Games in Order:</h4>
    <ul>
        @foreach (var game in Model.Games)
        {
            <li>@game.Title - $@game.Price.ToString("0.00")</li>
        }
    </ul>
</div>


