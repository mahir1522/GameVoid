@model PROG3050_Team_Project.Models.Cart
<link rel="stylesheet" href="~/css/admin.css">
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container-fluid">
        <!-- Logo and brand name -->
        <a class="navbar-brand" href="@Url.Action("Index", "User")">
            <div class="brand-logo">
                <span class="game">GAME</span>
                <span class="void">VOID</span>
            </div>
        </a>

        <!-- Toggler button for smaller screens -->
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <!-- Navbar links -->
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ms-auto">
                <li class="nav-item mb-3">
                    <a class="nav-link text-light" asp-controller="User" asp-action="Profile" asp-route-memberId="@Model.MemberID">Profile</a>
                </li>
                <li class="nav-item mb-3">
                    <a class="nav-link text-light" asp-controller="User" asp-action="GoToFriends" asp-route-memberId="@Model.MemberID" class="btn btn-primary">Friends & Family</a>
                </li>
                <li class="nav-item mb-3">
                    <a class="nav-link text-light" asp-controller="Wishlist" asp-action="Event" asp-route-memberId="@Model.MemberID">Events</a>
                </li>
                <li class="nav-item mb-3">
                    <a class="nav-link text-light" asp-controller="Wishlist" asp-action="List" asp-route-memberId="@Model.MemberID">WishList</a>
                </li>
                <li class="nav-item mb-3">
                    <a class="nav-link text-light" asp-controller="Wishlist" asp-action="Cart" asp-route-memberId="@Model.MemberID">Cart</a>
                </li>
                <li class="nav-item mb-3">
                    <a class="nav-link text-light" asp-controller="LogIn" asp-action="Index">LogOut</a>
                </li>
            </ul>

        </div>
    </div>
</nav>


<div class="text-center">
    <h1 class="display-4">Checkout</h1>

    <form asp-action="SubmitCheckout" asp-controller="Wishlist" asp-route-memberId="@Model.MemberID" method="post">
        <div>
            <label for="CardHolderName">Cardholder Name:</label>
            <input type="text" id="CardHolderName" name="CardHolderName" required />
        </div>

        <div>
            <label for="CardNumber">Card Number:</label>
            <input type="text" id="CardNumber" name="CardNumber" maxlength="16" required />
        </div>

        <div>
            <label for="ExpirationMonth">Expiration Date:</label>
            <select id="ExpirationMonth" name="ExpirationMonth" required>
                @for (int month = 1; month <= 12; month++)
                {
                    <option value="@month">@month.ToString("D2")</option>
                }
            </select>
            <select id="ExpirationYear" name="ExpirationYear" required>
                @for (int year = DateTime.Now.Year; year <= DateTime.Now.Year + 10; year++)
                {
                    <option value="@year">@year</option>
                }
            </select>
        </div>

        <div>
            <label for="CVC">CVC:</label>
            <input type="text" id="CVC" name="CVC" maxlength="3" required />
        </div>

        <button type="submit">Complete Checkout</button>
    </form>
</div>
